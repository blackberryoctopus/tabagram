{
	"name": "Tabagram",
	"version": "0.1",
	"manifest_version": 2,

	"description": "Opens a new tab for instagram photos with the raw image",

	"page_action": {
		"default_title": "Tabagram",
		"default_icon": {
			"19": "icon19.png",
			"38": "icon38.png"
		}
	},

	"content_scripts": [
		{
			"matches": ["http://instagram.com/*"],
			"js": ["content.js"]
		}
	],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"permissions": ["tabs"]
}
